{
  "manifest_version": 3,
  "name": "Hotel Price Tracker (Booking, Airbnb, Agoda)",
  "version": "3.5.0",
  "description": "Track competitor hotel prices on Booking.com, Airbnb, and Agoda",
  "incognito": "spanning",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "notifications",
    "alarms",
    "sidePanel",
    "identity"
  ],
  "host_permissions": [
    "https://www.booking.com/*",
    "https://*.booking.com/*",
    "https://www.airbnb.com/*",
    "https://*.airbnb.com/*",
    "https://www.agoda.com/*",
    "https://*.agoda.com/*",
    "https://*.workers.dev/*"
  ],
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.booking.com/*",
        "https://*.booking.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://www.airbnb.com/*",
        "https://*.airbnb.com/*"
      ],
      "js": [
        "airbnb.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://www.agoda.com/*",
        "https://*.agoda.com/*"
      ],
      "js": [
        "agoda.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
